<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%- error.msg %><span>X</span></li>
        <% }) %>
    </ul>
<% } %>
<%- messages() %>
<div id="login">
    <form id="login-form" action="/account/login" method="post">
        <label for="email">Email: </label>
        <input type="email" id="email" name="account_email">
        <label for="password">Password: </label>
        <%- include('../partials/pwVisibility') %>
        <input type="password" id="password" name="account_password">
        <input class="login-form__submit-btn" type="submit" value="LOGIN">
        <p>No account? <a href="registration">Sign up</a></p>
    </form>
</div>
<script src="../.././js/script.js"></script>

