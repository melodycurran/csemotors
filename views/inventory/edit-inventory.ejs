<% if (title) { %>
    <h1><%- title %></h1>
<% } else {
    res.redirect('/')
} %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%- error.msg %><span>X</span></li>
        <% }) %>
    </ul>
<% } %>

<%- messages() %>

<div id="add-inventory">
    <form action="/inv/update" id="edit-inventory-form" method="post">
        <label for="choose-classification">Choose a classification: </label>
        <%- select %>
        <label for="make">Make</label>
        <input id="make" name="inv_make" type="text" required value="<%= locals.inv_make %>">

        <label for="model">Model</label>
        <input id="model" name="inv_model" type="text" required value="<%= locals.inv_model %>">
        
        <label for="description">Description</label>
        <textarea id="description" name="inv_description" required><%= locals.inv_description %></textarea>

        <label for="image_path">Image Path</label>
        <input id="image_path" name="inv_image" type="text" pattern="(\/).(\w+).(\w+).*(\.)(gif|png|jpg|jpeg)" required value="<%= locals.inv_image %>">

        <label for="tn_path">Thumbnail Path</label>
        <input id="tn_path" name="inv_thumbnail" type="text" required value="<%= locals.inv_thumbnail %>">

        <label for="price">Price</label>
        <input id="price" name="inv_price" type="number" required value="<%= locals.inv_price %>">

        <label for="year">Year</label>
        <input id="year" name="inv_year" type="number" required value="<%= locals.inv_year %>">

        <label for="miles">Miles</label>
        <input id="miles" name="inv_miles" type="number" required value="<%= locals.inv_miles %>">

        <label for="color">Color</label>
        <input id="color" name="inv_color" type="text" required value="<%= locals.inv_color %>">

        <input type="submit" value="Submit Changes">

        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
        
    </form>
</div>