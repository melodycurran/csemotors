<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%- error.msg %><span>X</span></li>
        <% }) %>
    </ul>
<% } %>

<%- messages() %>

<div id="review-container">

    <div class="form-container">
        <% if(locals.account_id) { %> 
            <p>Reviews can't be deleted nor editable.</p>
            <form action="/review/submit-review" id="review-form" method="post">
                <label for="star-rating">Rate your experience</label>
                
                <span id="star-rating">
                    <label for="rating-1" class="rating">
                        <span class="material-symbols-outlined star">star_rate</span>
                    </label>
                    <input type="radio" id="rating-1" name="star" value="1" required>

                    <label for="rating-2" class="rating">
                        <span class="material-symbols-outlined star">star_rate</span>
                    </label>
                    <input type="radio" id="rating-2" name="star" value="2" required>
                    
                    <label for="rating-3" class="rating">
                        <span class="material-symbols-outlined star">star_rate</span>
                    </label>
                    <input input type="radio" id="rating-3" name="star" value="3" required>
                    
                    <label for="rating-4" class="rating">
                        <span class="material-symbols-outlined star">star_rate</span>
                    </label>
                    <input type="radio" id="rating-4" name="star" value="4" required>
                    
                    <label for="rating-5" class="rating">
                        <span class="material-symbols-outlined star">star_rate</span>
                    </label>
                    <input type="radio" id="rating-5" name="star" value="5" required>        
                </span>

                <label>Leave a comment</label>
                <textarea type="text" name="review" required placeholder="max 250 characters"><%= locals.review %></textarea>

                <input type="hidden" name="account_id" <% if(locals.account_id) { %> value="<%= locals.account_id %>"
                    <% } %>>

                <input type="submit" value="Submit">
            </form>
        <% } else { %>
            <p>Please Log in to leave reviews.</p>
            <a href="../../account/login">Log In</a>
        <% } %> 

</div>

    <div id="review-container__all-reviews">
        <%- reviewHtmlItems %>
    </div>

    
    
</div><script src="../.././js/rating.js"></script>